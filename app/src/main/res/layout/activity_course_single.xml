<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs410.android.ui.CourseSingleActivity">

    <RelativeLayout
        android:id="@+id/single_course_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#3F51B5">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/single_course_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            app:riv_border_color="#3F51B5"
            app:riv_border_width="2dip"
            app:riv_oval="true"/>

        <TextView
            android:id="@+id/single_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/single_course_icon"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="This is an example title"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/single_course_header">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/single_course_author"
                    android:text="Steven Gatto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"/>

                <TextView
                    android:id="@+id/single_course_category"
                    android:text="Outdoors, Inside, Something Else"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/single_course_author"
                    android:layout_marginTop="2dp"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/single_course_date"
                    android:text="January 26, 2015"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/single_course_category"
                    android:textSize="20sp"/>

                <View
                    android:id="@+id/single_course_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/single_course_date"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"/>

                <!-- will be filled programatically -->
                <LinearLayout
                    android:id="@+id/single_course_lesson_list_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/single_course_divider"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
