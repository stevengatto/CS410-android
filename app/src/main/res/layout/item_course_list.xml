<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/item_course_list_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/course_icon_description"/>

        <TextView
            android:id="@+id/item_course_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_course_list_icon"
            android:layout_toStartOf="@id/item_course_list_date"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/item_course_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/item_course_list_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_course_list_title"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="@color/cardview_dark_background"/>

            <TextView
                android:id="@+id/item_course_list_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_course_list_author"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="@color/cardview_dark_background"
                android:fontFamily="sans-serif-thin" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>