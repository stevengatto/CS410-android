<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/lesson_list_progress_circle_top_line"
        android:layout_width="4dp"
        android:layout_height="8dp"
        android:layout_marginStart="17dp"
        android:background="@color/primary_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/lesson_list_progress_circle_frame"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_dark" />

            <View
                android:id="@+id/lesson_list_progress_circle"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/lesson_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/lesson_list_progress_circle_frame"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lesson_list_bottom_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/lesson_list_progress_circle_bottom_line"
            android:layout_width="4dp"
            android:layout_height="8dp"
            android:layout_marginStart="17dp"
            android:background="@color/primary_text" />

        <View
            android:id="@+id/lesson_list_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toEndOf="@id/lesson_list_progress_circle_bottom_line"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="-16dp"
            android:background="#e0e0e0" />

    </RelativeLayout>

</LinearLayout>